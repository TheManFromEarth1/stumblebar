{

  "manifest_version": 2,
  "name": "StumbleBar by StumbleUpon",
  "version": "0.1",

  "content_scripts": [{
    "js": ["utils.js", "dragndrop.js", "bar.js"],
    "css": ["bar.css"],
    "matches": ["*://*/*"],
    "all_frames": false,
		"run_at": "document_start"
  }],

//  "externally_connectable": true,

  "web_accessible_resources": [
    "*://*.stumbleupon.com/*",
    "bar.html",
    "reset.css",
    "toolbar.html",
    "utils.js",
    "contactlist.js",
    "toolbar.js",
    "toolbar.css"
  ],


  "description": "Discover the best of the web",
  "icons": {
    "48": "icons/discover-48.png"
  },

  "applications": {
    "gecko": {
      "id": "discover@mix.com",
      "strict_min_version": "45.0"
    }
  }, 

  "permissions": [
    "bookmarks",
    "tabs",
    "cookies",
    "*://*.stumbleupon.com/*",
    "storage"
  ], 

  "browser_action": {
    "default_icon": {
     "32" : "icons/discover-32.png"
    },
    "default_title": "StumbleBar by StumbleUpon"
    //"default_popup": "content/discover.html"
  },

  "background": {
	  "persistent": true,
	  "scripts": [
		  "polyfill.js",
		  "utils.js",
		  "config.js",
		  "cache.js",
		  "cookie.js",
		  "api_request.js",
		  "api.js",
		  "conversation.js",
		  "stumbleuponapi.js",
		  "page.js",
		  "toolbarevent.js"
	  ]
  }

}

