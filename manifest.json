{

  "manifest_version": 2,
  "name": "StumbleBar by StumbleUpon",
  "version": "0.455",

  "content_scripts": [{
    "js": ["utils.js", "dragndrop.js", "bar.js"],
    "css": ["bar.css"],
    "matches": ["<all_urls>"],
	"match_about_blank": true,
    "all_frames": false,
	"run_at": "document_start"
  }],

//  "externally_connectable": true,

  "web_accessible_resources": [
    "*://*.stumbleupon.com/*",
    "bar.html",
    "reset.css",
    "toolbar.html",
    "utils.js",
    "contactlist.js",
    "toolbar.js",
    "toolbar.css"
  ],


  "description": "Discover the best of the web",
  "icons": {
    "48":  "asset/Logo.png",
    "64":  "asset/Logo.png",
    "128": "asset/Logo.png"
  },

  "applications": {
    "gecko": {
      "id": "discover@mix.com",
      "strict_min_version": "45.0"
    }
  }, 

  "permissions": [
    "bookmarks",
    "tabs",
    "cookies",
    "<all_urls>",
    "storage"
  ], 

  "browser_action": {
    "default_icon": {
     "32" : "asset/Logo.png"
    },
    "default_title": "StumbleBar by StumbleUpon"
    //"default_popup": "content/discover.html"
  },

  "background": {
	  "persistent": true,
	  "scripts": [
		  "polyfill.js",
		  "utils.js",
		  "config.js",
		  "error.js",
		  "cache.js",
		  "cookie.js",
		  "api_request.js",
		  "api.js",
		  "contactlist.js",
		  "conversation.js",
		  "stumbleuponapi.js",
		  "page.js",
		  "toolbarevent.js"
	  ]
  }

}

